<Page x:Class="CalcHelperDesktop.Pages.Welcome"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CalcHelperDesktop.Pages"
      xmlns:app="clr-namespace:CalcHelperDesktop"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Welcome">
    <Page.Resources>
        <app:WpConverter x:Key="WpConverter" />
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0" >
            <TabItem Header="Start">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <Label Content="Witaj w pomocniku obliczeń kolejowych!" Grid.Row="0" />
                </Grid>
            </TabItem>
            <TabItem Header="Opcje" IsEnabled="False" />
        </TabControl>
    </Grid>
</Page>
